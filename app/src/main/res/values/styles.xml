<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="edittext_with_border" >
        <item name="android:background">@drawable/edittext_with_border</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="button" >
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="button_dark_green" parent="button">
        <item name="android:background">@drawable/button_dark_green</item>
    </style>

    <style name="button_blue_text" >
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textview_default_style">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
